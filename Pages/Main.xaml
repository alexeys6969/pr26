<Page x:Class="Airlines_Shashin.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airlines_Shashin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="Blue">
        <Grid VerticalAlignment="Top">
            <TextBlock Text="Управление авиалиниями" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,10,0,10"/>
            <Button Content="Выход" Click="Exit" VerticalAlignment="Center" HorizontalAlignment="Right" Height="25" Width="100" Margin="0,0,25,0"/>
        </Grid>
        <Grid Margin="0,41,0,0" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="119*"/>
                <ColumnDefinition Width="163*"/>
                <ColumnDefinition Width="118*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Поиск лучших авиабилетов" Foreground="White" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,367" Width="328" Grid.Column="1"/>
            <TextBlock Text="Лучший способ купить авиабилеты дёшево" Foreground="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0" Grid.Column="1" Height="21" Width="321"/>
            <TextBlock Text="Откуда:" Foreground="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,100,0,0" Height="21" Width="55" Grid.Column="1"/>
            <TextBox Grid.Column="1" x:Name="from" VerticalAlignment="Top" Margin="0,130,0,0" Height="25" HorizontalAlignment="Center" Width="326"/>
            <TextBlock Text="Куда:" Foreground="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,160,0,0" Height="21" Width="55" Grid.Column="1"/>
            <TextBox Grid.Column="1" x:Name="to" VerticalAlignment="Top" Margin="0,190,0,0" Height="25" HorizontalAlignment="Center" Width="326"/>
            <TextBlock Text="Туда:" Foreground="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,215,0,0" Height="21" Width="55" Grid.Column="1"/>
            <DatePicker Grid.Column="1" BorderThickness="0" Margin="0,240,0,-240" x:Name="tuda"/>
            <TextBlock Text="Обратно:" Foreground="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,265,0,0" Height="21" Width="73" Grid.Column="1"/>
            <DatePicker Grid.Column="1" BorderThickness="0" Margin="0,290,0,-290" x:Name="obratno"/>
            <Button Grid.Column="1" IsDefault="True" Click="Search" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Margin="226,320,0,0" Content="Найти" Background="Orange" Foreground="White"/>
        </Grid>
    </Grid>
</Page>
